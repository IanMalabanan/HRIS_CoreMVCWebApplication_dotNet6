@page "/employee"

@attribute [Authorize]
@inherits EmployeeBase
<PageTitle>Employees</PageTitle>

<h3>Employee</h3>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Employee Name</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Department</th>
            <th>Section</th>
            <th>Date Of Birth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in getEmployees)
        {
            <tr>
                <td>
                    <table>
                        <tr>

                            <td><button class="btn btn-primary" @onclick="(() => EditEmployee(employee.EmpID))"><i class="oi oi-pencil"></i></button></td>

                            <td><button class="btn btn-danger" @onclick="(async() => await DeleteEmployee(employee.EmpID))"><i class="oi oi-trash"></i></button></td>
                        </tr>
                    </table>
                </td>
                <td>@employee.EmpID</td>
                <td>@employee.LastName</td>
                <td>@employee.FirstName</td>
                <td>@employee.MiddleName</td>
                <td>@employee.Department.Description</td>
                <td>@employee.DepartmentSection.Description</td>
                <td>@employee.DateOfBirth.ToString("dd/MMM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary" @onclick="CreateNewEmployee">Create New Employee</button>





